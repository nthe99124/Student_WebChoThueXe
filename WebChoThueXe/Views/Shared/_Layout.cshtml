<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>Home | CarShop</title>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
	<link href="~/css/prettyPhoto.css" rel="stylesheet">
	<link href="~/css/price-range.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
	<link href="~/css/animate.css" rel="stylesheet">
	<link href="~/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/css/main.css" rel="stylesheet">
	<link href="~/css/responsive.css" rel="stylesheet">
	<link href="~/css/layout.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.css">
	<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WebChoThueXe.styles.css" asp-append-version="true" />
	<link rel="shortcut icon" href="images/ico/favicon.ico">
	<link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
	<link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
	<script src="~/js/jquery.js"></script>
	<script src="https://cdn.datatables.net/2.0.7/js/dataTables.js"></script>
</head>

<body>
	<section class="header line-header  scroll-top">
		<div class="m-container">
			<div class="full-logo">
				<a href="index.html"><img src="/images/logocarrental.png" style="width:214px; height:140px;" alt="" /></a>
			</div>
			<div class="menu-container menu-icon-box">
				<a asp-controller="Home" asp-action="Index">Trang chủ</a>
				<div class="vertical-line"></div>
				@if(User.Identity?.IsAuthenticated ?? false)
				{
					<a class="cart-button" asp-controller="Cart" asp-action="Index">
						<div class="wrap-svg">
							<i class="fa fa-shopping-cart" aria-hidden="true"></i>
						</div>
					</a>
					<div class="dropdown-profile">
						<a class="dropdown-profile" href="/account">
							<div class="avatar avatar--s">
								<img loading="lazy" src="https://n1-astg.mioto.vn/g/2024/04/21/23/w9FfrljWmtSKyfiXeoDQQw.jpg">
							</div>
							<span class="name">@User.Identity?.Name</span>
							<div class="wrap-svg arrow-infor">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
									<path d="M16.8998 9.20039C16.4998 8.80039 15.8998 8.80039 15.4998 9.20039L11.9998 12.7004L8.4998 9.20039C8.0998 8.80039 7.4998 8.80039 7.0998 9.20039C6.6998 9.60039 6.6998 10.2004 7.0998 10.6004L11.2998 14.8004C11.4998 15.0004 11.6998 15.1004 11.9998 15.1004C12.2998 15.1004 12.4998 15.0004 12.6998 14.8004L16.8998 10.6004C17.2998 10.2004 17.2998 9.60039 16.8998 9.20039Z" fill="black"></path>
								</svg>
							</div>
						</a>
						<div class="wrap-svg tab-menu">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M5 6H19" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
								<path d="M5 18H19" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
								<path d="M5 12H19" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
							</svg>
						</div>
					</div>
				}
				else
				{
					<a class="btn btn--s sign-in" asp-controller="Account" asp-action="Create">Đăng ký</a>
					<a class="btn btn--s" asp-controller="Account" asp-action="Login">Đăng nhập</a>

					<div class="wrap-svg tab-menu">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M5 6H19" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
							<path d="M5 18H19" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
							<path d="M5 12H19" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
						</svg>
					</div>
				}

				@if(User.Identity?.IsAuthenticated ?? false)
				{
					<div class="dropdown user-dropdown corner-triangle top-right radius-10">
						<ul class="user-dropdown-menu radius-10"><li class="dropdown-user-info">
							<a href="javascript:;" class="radius-top-10">
								<div class="clearfix">
									<div class="user-image float-start" style="float:left">
										<img src="https://4user.net/uploads/user_image/placeholder.png" alt="">
									</div>
									<div class="user-details">
										<div class="user-name">@User.Identity?.Name</div>
										<div class="user-email">
										</div>
									</div>
								</div>
							</a>
							</li>
							<li class="user-dropdown-menu-item">
								<a asp-controller="Home" asp-action="Index">Trang chủ</a>
							</li>
							<li class="dropdown-user-logout user-dropdown-menu-item radius-bottom-10">
								<a class="radius-bottom-10 py-3" asp-controller="Account" asp-action="Logout">
									<i class="fa fa-sign-out" aria-hidden="true"></i> Đăng xuất</a>
							</li>
						</ul>
					</div>
				}

				<div class="menu-mobile open move-left">
					<div class="header-menu">
						<div class="close-menu">×</div>
						</div>
					<div class="m-container">
						<div class="menu-list">
							@if(User.Identity?.IsAuthenticated ?? false)
							{
								<a class="menu-avatar" href="/account">
									<div class="avatar avatar--s">
										<img loading="lazy" src="https://n1-astg.mioto.vn/g/2024/04/21/23/w9FfrljWmtSKyfiXeoDQQw.jpg">
									</div>
									<span class="name">@User.Identity?.Name</span>
								</a>
								<div class="line-page"></div>
								<a class="cart-button" asp-controller="Cart" asp-action="Index">
									<div class="wrap-svg">
										<i class="fa fa-shopping-cart" aria-hidden="true"></i>Giỏ hàng
									</div>
								</a>
							}
							else
							{
								<a class="menu-list__item" asp-controller="Account" asp-action="Login">Đăng nhập</a>
								<div class="line-page"></div>
								<a class="menu-list__item" asp-controller="Account" asp-action="Create">Đăng ký</a>
							}
							<div class="line-page"></div>
							<a class="menu-list__item" asp-controller="Home" asp-action="Index">Trang chủ</a>
						</div>
						@if(User.Identity?.IsAuthenticated ?? false)
						{
							<a class="menu-logout" asp-controller="Account" asp-action="Logout">
								<div class="wrap-svg">
									<i class="fa fa-sign-out" aria-hidden="true"></i>
								</div>Đăng xuất
							</a>
						}
					</div>
				</div>
			</div>
		</div>
	</section>

	<section style="padding-top: 20px;">
		<div class="container">
			<div class="row">
				@Html.Partial("_NotificationPartial")
				@RenderBody()
			</div>
		</div>
	</section>

	<footer id="footer">
		<!--Footer-->
		<div class="footer-top position-static">
			<div class="container">
				<div class="row">
					<div class="col-sm-2">
						<div class="companyinfo">
							<h2><span>Car</span>-shop</h2>
							<p>Trang thuê xe số 1 Việt Nam</p>
						</div>
					</div>
					<div class="col-sm-7">
						<div class="col-sm-3">
							<div class="video-gallery text-center">
								<a href="#">
									<div class="iframe-img">
										<img src="~/images/gifhonda.gif" alt="" />
									</div>
								</a>
								<p>HONDA-CIVIC</p>
							</div>
						</div>

						<div class="col-sm-3">
							<div class="video-gallery text-center">
								<a href="#">
									<div class="iframe-img">
										<img src="images/gifbmw.gif" alt="" />
									</div>
								</a>
								<p>BMW-320i</p>
							</div>
						</div>

						<div class="col-sm-3">
							<div class="video-gallery text-center">
								<a href="#">
									<div class="iframe-img">
										<img src="images/porsche.gif" alt="" />
									</div>
								</a>
								<p>PORSCHE-911 Carrera S</p>
							</div>
						</div>

						<div class="col-sm-3">
							<div class="video-gallery text-center">
								<a href="#">
									<div class="iframe-img">
										<img src="images/toyota.gif" alt="" />
									</div>
								</a>
								<p>TOYOTA-CROWN</p>
							</div>
						</div>
					</div>
					<div class="col-sm-3">
						<div class="address">
							<img src="images/home/map.png" alt="" />
							<p>505 S Atlantic Ave Virginia Beach, VA(Virginia)</p>
						</div>
					</div>
					<div class="col-sm-3">
						
						<ul>
							<div class="title_footer pad">
								<p>Liên kết mạng xã hội</p>
							</div>
							<li>
								<a rel="nofollow" href="https://m.me/huynhthaibao1510/" titel="Chat Facebook" target="_blank">
									<img src="/images/button_messenger.svg" alt="Chat Facebook" title="Chat Facebook">
									<p><strong>Chat Facebook</strong> <span>(8h00 - 21h30)</span></p>
								</a>
							</li>
							<li>
								<a rel="nofollow" href="https://zalo.me/0853726509" title="Chat Zalo" target="_blank">
									<img src="/images/button_zalo.svg" alt="Chat Zalo" title="Chat Zalo">
									<p><strong>Chat Zalo</strong> <span>(8h00 - 21h30)</span></p>
								</a>
							</li>
							<li>
								<a rel="nofollow" href="tel:0853.726.509" title="Hotline CSKH" target="_blank">
									<img src="/images/button_hotline.svg" alt="Gọi Hotline" title="Gọi Hotline">
									<p><strong>0853.726.5097</strong> <span>(8h00 - 21h30)</span></p>
								</a>
							</li>
						</ul>
					</div>
					<div class="col-sm-7">
						<div class="box_contact_footer">
							<div class="col-sm-3">			
									<a href="#">
										<p>475A Điện Biên Phủ, P.25, Q.Bình Thạnh, TP.HCM</p>
										<div id="google-map-19" class="box_google_map active">
											<div class="google_map">
												<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d125411.90303685963!2d106.63215784552668!3d10.801969330269387!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2zSFVURUNIIC0gxJDhuqFpIGjhu41jIEPDtG5nIG5naOG7hyBUUC5IQ00gKFNhaSBHb24gQ2FtcHVzKQ!5e0!3m2!1svi!2s!4v1714032242634!5m2!1svi!2s" width="214" height="140" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
											</div>
										</div>
									</a>	
							</div>
							<div class="col-sm-4">
								<div class="box_payments_footer">
									<div class="title_footer">
										<p>Phương thức thanh toán</p>
									</div>
									<div class="payments_method">
										<img src="/images/methods.svg" alt="Phương thức thanh toán" title="Phương thức thanh toán">
									</div>
								</div>
							</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</footer><!--/Footer-->
	
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.scrollUp.min.js"></script>
	<script src="~/js/price-range.js"></script>
	<script src="~/js/jquery.prettyPhoto.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/js/Views/_layout.js"></script>
	@await RenderSectionAsync("Scripts",required:false)
</body>
</html>